@model HomeGetAllViewModel

@{
    ViewBag.Title = "staff list";
}
<div class="row row-cols-1 row-cols-md-4">
    @foreach (var staff in Model.Staffs)
    {
        <div class="card">
            <div class="card-header">
                <h6>@staff.FirstName @staff.LastName</h6>
            </div>
            <img src="~/images/user.png" class="rounded-circle" alt="userImage" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-Id="@staff.Id" class="btn btn-primary m-1" >View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
